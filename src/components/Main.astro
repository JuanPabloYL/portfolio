---
import { Icon } from "astro-icon/components";
---

<main class="main padding-inline">
  <div class="main__intro">
    <h1>Hi, I'm a <span class="main__span">Front-end</span> Developer</h1>

    <button class="main__arrow" id="contact-btn">
      Let's talk
      <Icon  name="arrow-outline" />
    </button>
  </div>

  <div class="main__icon">
    <!-- <Icon name="programming" /> -->
    <!--<Icon name="programming" size="60rem"></Icon>-->
    <img src="../../public/images/developer_male.jpg" alt="icon" />
  </div>


</main>

<style>
  .main {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-bottom: 1px solid #000;
    zindex: 10;
    height: 60rem;
  }

  @media (min-width: 768px) {
    .main {
      flex-direction: row;
    }
  }

  .main__intro {
    padding-bottom: 2rem;
  }

  .main__intro h1 {
      font-size: 6rem;
      margin-bottom: 2rem;
      margin-top: 3rem;
  }

  @media (min-width: 768px) {
    .main__intro h1 {
      font-size: 8rem;
    }
  }

  .main__icon {
    margin-bottom: -12rem;
  }

  .main__icon img {
    z-index: -10;
    width: 80rem;
  }

  //.main__icon svg {
    //height: 30rem;
    //width: 30rem;
  //}

  @media (min-width: 768px) {
    //.main__icon svg {
    //  height: 60rem;
    //  width: 60rem;
    //}
  }

  .main__span {
    color: #2660FE;
  }

  .main__arrow {
    background-color: #2660FE;
    color: #fff;
    padding-inline: 2rem;
    padding-block: 1rem;
    transition: transform .3s;

    margin: 0 auto;

    display: flex;
    font-size: 2rem;
  }

  @media (min-width: 768px) {
    .main__arrow {
      margin: 0;
      display: block;
    }
  }
  .main__arrow svg {
    transform: rotate(90deg);
  }

  .main__arrow:hover {
    cursor: pointer;
    transform: scale(1.1);
  }
</style>


<script>
  import { toggleForm } from "../scripts/toggleForm";

  document.addEventListener("DOMContentLoaded", () => {
    const openForm = document.querySelector("#contact-btn")!;

    openForm.addEventListener("click", toggleForm);
  })
</script>
