---
import {Icon} from "astro-icon/components";
---
<button class="main__arrow" id="contact">
    Let's talk
    <Icon  name="arrow-outline" />
</button>

<style>
    .main__arrow {
        background-color: #2660FE;
        color: #fff;
        padding-inline: 2rem;
        padding-block: 1rem;
        transition: transform .3s;

        display: flex;
        font-size: 2rem;
    }

    @media (min-width: 768px) {
        .main__arrow {
            margin: 0;
            display: block;
        }
    }
    .main__arrow svg {
        transform: rotate(90deg);
    }

    .main__arrow:hover {
        cursor: pointer;
        transform: scale(1.1);
    }
</style>